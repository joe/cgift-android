    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/gradient_layout"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="2dp"
        android:background="?attr/settings_menu_background"
    />

    <View
        android:id="@+id/anchor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/lockImg"
        android:layout_width="130dp"
        android:layout_height="175dp"
        android:layout_above="@+id/anchor"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/cg_img_lock" />

    <com.breadwallet.presenter.customviews.BaseTextView
        android:id="@+id/textView6"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lockImg"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/bread_margin"
        android:layout_marginTop="@dimen/bread_margin"
        android:layout_marginEnd="@dimen/bread_margin"
        android:layout_marginBottom="@dimen/bread_margin"
        android:gravity="center"
        android:text="@string/StartPaperPhrase.body"
        android:textSize="24sp"
        app:brdFont="@string/Font.CircularPro_Bold" />

    <com.breadwallet.presenter.customviews.BaseTextView
        android:id="@+id/moreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/bread_margin"
        android:layout_marginTop="@dimen/bread_margin"
        android:layout_marginEnd="@dimen/bread_margin"
        android:layout_marginBottom="@dimen/bread_margin"
        android:gravity="center"
        android:text="@string/StartPaperPhrase.body.more"
        android:textSize="18sp" />

    <com.breadwallet.presenter.customviews.BRButton
        android:id="@+id/button_write_down"
        style="@style/CircularProFontButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/bread_margin"
        android:layout_marginEnd="@dimen/bread_margin"
        android:layout_marginBottom="16dp"
        android:background="@color/prompt_action_button"
        android:padding="10dp"
        android:text="@string/Button.continueAction"
        android:textColor="@color/black"
        android:textSize="@dimen/button_text_size" />

</RelativeLayout>
